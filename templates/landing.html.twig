{% extends "base.html.twig" %} {% block title %}{{ app_name }} - Professional
Ticket Management{% endblock %} {% block content %}
<!-- Navbar -->
<nav class="navbar">
  <div class="container navbar-inner">
    <a href="?page=landing" class="logo">
      <svg
        class="icon-md"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"
        />
      </svg>
      <span>TicketFlow</span>
    </a>
    <div class="nav-links">
      <a href="?page=login" class="btn btn-ghost">Login</a>
      <a href="?page=signup" class="btn btn-primary">Get Started</a>
    </div>
  </div>
</nav>

<!-- Hero Section -->
<section
  style="
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(to bottom right, #eff6ff, #ffffff, #dbeafe);
  "
>
  <!-- Decorative Circle -->
  <div
    style="
      position: absolute;
      top: -8rem;
      right: -8rem;
      width: 25rem;
      height: 25rem;
      opacity: 0.6;
    "
  >
    <img
      src="/assets/decorative-circle.svg"
      alt=""
      style="width: 100%; height: 100%"
    />
  </div>

  <!-- Hero Content -->
  <div
    style="
      position: relative;
      z-index: 10;
      max-width: 48rem;
      margin: 0 auto;
      padding: 5rem 1.5rem;
      text-align: center;
    "
  >
    <h1
      style="
        font-size: 2.25rem;
        font-weight: 700;
        line-height: 1.2;
        letter-spacing: -0.025em;
        margin-bottom: 1.5rem;
      "
    >
      Streamline Your Support <span style="color: #2563eb">Workflow</span>
    </h1>
    <p
      style="
        font-size: 1.125rem;
        color: #4b5563;
        margin-bottom: 2rem;
        line-height: 1.6;
        max-width: 32rem;
        margin-left: auto;
        margin-right: auto;
      "
    >
      TicketFlow helps teams manage customer support tickets efficiently. Track,
      prioritize, and resolve issues with a modern, intuitive interface.
    </p>
    <div
      style="
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
      "
    >
      <a
        href="?page=signup"
        class="btn btn-primary"
        style="
          font-size: 1rem;
          padding: 0.75rem 2rem;
          box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.2);
        "
      >
        Get Started Free
      </a>
      <a
        href="?page=login"
        class="btn btn-secondary"
        style="font-size: 1rem; padding: 0.75rem 2rem"
      >
        Login
      </a>
    </div>
  </div>

  <!-- Wave Bottom -->
  <div
    style="
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 12.5rem;
      pointer-events: none;
    "
  >
    <img
      src="../assets/hero-wave.svg"
      alt=""
      style="width: 100%; height: 100%; object-fit: cover"
    />
  </div>
</section>

<!-- Features Section -->
<section style="padding: 4rem 0; background: white">
  <div class="container" style="padding: 0 1.5rem">
    <div style="text-align: center; margin-bottom: 3rem">
      <h2 style="font-size: 1.875rem; font-weight: 600; margin-bottom: 1rem">
        Everything You Need
      </h2>
      <p
        style="
          font-size: 1.125rem;
          color: #4b5563;
          max-width: 32rem;
          margin: 0 auto;
        "
